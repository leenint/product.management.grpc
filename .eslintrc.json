{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
      "no-restricted-syntax": "off",
      "max-len": "off",
      "no-confusing-arrow": "off",
      "arrow-parens": "off",
      "no-param-reassign": "off",
      "no-plusplus": "off",
      "no-await-in-loop": "off"
    }
}
